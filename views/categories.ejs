<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/tailwind.css" rel="stylesheet">
  <title>Categories</title>
</head>
<body class="bg-gray-100">
  <%- include('partials/header') %>
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-center my-8">Categories</h1>
    <div class="mb-8">
      <h2 class="text-2xl font-semibold">Add Category</h2>
      <form action="/category" method="POST" class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
        <div class="mb-4">
          <label class="block text-gray-700">Name</label>
          <input type="text" name="name" class="w-full border border-gray-300 rounded py-2 px-3" required>
        </div>
        <button type="submit" class="btn btn-primary w-full">Add Category</button>
      </form>
    </div>
    <div>
      <h2 class="text-2xl font-semibold">Categories</h2>
      <ul class="list-disc list-inside bg-white p-4 rounded shadow-md">
        <% categories.forEach(category => { %>
          <li class="py-2 px-4"><%= category.name %></li>
        <% }); %>
      </ul>
    </div>
  </div>
</body>
</html>
